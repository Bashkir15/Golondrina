<section class='landing-contact-container'>
	<form name='contactForm' class='contact-form'>
		<div class='form-wrapper'>
			<input type='text' name='name' class='form-input' id='contact-name'>
			<label for='contact-name'>Name</label>
		</div>

		<div class='form-wrapper form-email'>
			<input type='email' name='email' class='form-input' id='contact-email'>
			<label for='contact-email'>Email</label>
		</div>

		<div class='form-wrapper'>
			<input type='phone' name='phone' class='form-input' id='contact-phone'>
			<label for='contact-phone'>Phone</label>
		</div>

		<div class='form-wrapper'>
			<textarea name='message' class='form-input' rows='7' id='contact-message'></textarea>
			<label for='contact-message'>Message</label>
		</div>

		<div class='contact-submit'>
			<button type='button' class='form-send' aria-label='submit contact-form'>
				<div class='loader'></div>
				<span>Send</span>
			</button>
		</div>
	</form>
</section>